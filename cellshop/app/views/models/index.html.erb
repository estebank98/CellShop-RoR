<div class="container-div">
  <p id="notice"><%= notice %></p>

  <h1>Models</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Resolución</th>
        <th>Pantalla</th>
        <th>Peso</th>
        <th>Dimensiones</th>
        <th>Bateria</th>
        <th>Marca</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @models.each do |model| %>
        <tr>
          <td><%= model.name %></td>
          <td><%= model.resolution %></td>
          <td><%= model.screen %></td>
          <td><%= model.weight %></td>
          <td><%= model.dimensions %></td>
          <td><%= model.batery %></td>
          <td><%= model.brand.description %></td>
          <td><%= link_to 'Editar', edit_model_path(model) %></td>
          <td><%= link_to 'Eliminar', model, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo modelo', new_model_path %>
</div>
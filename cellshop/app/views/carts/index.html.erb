<div class="container-div">
  <h1>Carrito</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Precio</th>
        <th>Producto</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.created_at %></td>
          <td><%= cart.price %></td>
          <td><%= cart.product.model.name %></td>
          <td><%= link_to 'Ver más', cart %></td>
          <td><%= link_to 'Eliminar', cart, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar más', products_path, class:"btn btn-primary white" %>
  <a href="/orders/add/<%= current_user.id%>" class="btn btn-success white" role="button" title="Agregar al carrito">Confirmar pedido</a>
</div> 
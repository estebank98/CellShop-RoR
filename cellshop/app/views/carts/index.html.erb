<div class="container-div">
  <p id="notice"><%= notice %></p>

  <h1>Carrito</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Precio</th>
        <th>Producto</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.date %></td>
          <td><%= cart.price %></td>
          <td><%= cart.product %></td>
          <td><%= link_to 'Ver más', cart %></td>
          <td><%= link_to 'Eliminar', cart, method: :delete, data: { confirm: 'Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Agregar más', products_path %>
</div>
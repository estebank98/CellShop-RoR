<div class="container-div">
  <p id="notice"><%= notice %></p>

  <h1>Memorias</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Descripción</th>
        <th>Editar</th>
        <th>Eliminar</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @memories.each do |memory| %>
        <tr>
          <td><%= memory.description %></td>
          <td><%= link_to '', edit_memory_path(memory), class: 'glyphicon glyphicon-pencil' %></td>
          <td><%= link_to '' , memory, method: :delete, data: { confirm: 'Estás seguro?' }, class: "glyphicon glyphicon-remove"  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva memoria', new_memory_path, class: 'btn btn-primary' %>
</div>
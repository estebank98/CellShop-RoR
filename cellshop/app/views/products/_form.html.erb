<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :video %>
    <%= form.text_field :video %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :model_id %>
    <%= form.collection_select :model_id, @models, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :memory_id %>
    <%= form.collection_select :memory_id, @memories, :id, :description %>
  </div>

  <div class="field">
    <%= form.label :color_id %>
    <%= form.collection_select :color_id, @colors, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :storage_id %>
    <%= form.collection_select :storage_id, @storages, :id, :description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

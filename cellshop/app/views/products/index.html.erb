<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Image</th>
      <th>Stock</th>
      <th>Price</th>
      <th>Model</th>
      <th>Memory</th>
      <th>Color</th>
      <th>Storage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.description %></td>
        <td><%= product.image %></td>
        <td><%= product.stock %></td>
        <td><%= product.price %></td>
        <td><%= product.model %></td>
        <td><%= product.memory %></td>
        <td><%= product.color %></td>
        <td><%= product.storage %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


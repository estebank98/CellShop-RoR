<div class="container-div">
  <p id="notice"><%= notice %></p>

  <h1>Colores</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @colors.each do |color| %>
        <tr>
          <td><%= color.name %></td>
          <td><%= link_to 'Editar', edit_color_path(color) %></td>
          <td><%= link_to 'Eliminar', color, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo color', new_color_path %>
</div>
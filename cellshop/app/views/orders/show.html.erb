<div class="container-div">
	<p id="notice"><%= notice %></p>
	

	<h1>Detalles del Pedido</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Fecha de pedido</th>
        <th>Precio Total</th>
        <th>Fecha de entrega</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @order.created_at %></td>
          <td><%= @order.total_price %></td>
          <% if @order.date_delivered.nil?%>
            <td>No entregado</td>
          <%else%>
            <td>@order.date_delivered </td>
          <%end%>
        </tr>
    </tbody>
  </table>
	
	<h2>Articulos del Pedido</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Articulo</th>
        <th>Precio</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    	<% @order_details.each do |order| %>
        <tr>
          <td><%= order.product.model.name %><img class="img-responsive" <%= image_tag order.product.image.url(:mini) %></td>
          <td><%= order.price %></td>
        </tr>
        <%end%>
    </tbody>
  </table>
</div>
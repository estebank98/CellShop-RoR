          <td><%= link_to '', edit_color_path(color), class: 'glyphicon glyphicon-pencil' %></td>
          <td><%= link_to '' , color, method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: "glyphicon glyphicon-remove"  %></td>
